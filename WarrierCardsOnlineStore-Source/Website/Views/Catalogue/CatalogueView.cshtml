@model WarrierCards.Website.Models.CatalogueModel

<div class="content-wrapper">
    <div class="float-left" style="width: 19%;margin: 2px 0.5% 0 2px;">
        <div id="divFilters">
            <form>

                <div class="boxed">
                    <h2>Price Range</h2>
                    <div class="filter-tool">
                        From
                        <input type="text" style="width: 60px; height: 14px;" maxlength="6" />
                        &nbsp; To
                        <input type="text" style="width: 60px; height: 14px;" maxlength="6" />
                        <input type="button" value="  " class="go-button" />
                    </div>
                </div>


            </form>
        </div>
    </div>
    <div class="data-wrapper float-right" style="top: 0; margin: 0; padding: 0; vertical-align: top;">
        <h2 class="pageHeader">@Model.PageTitle</h2>
        @Html.Partial("_CardsGrid", Model.CardsCollection)
    </div>
</div>

@section scripts {
    <script type="text/javascript">  
        $(function () {
            var offset = $("#divFilters").offset();
            var topPadding = 0;
            $(window).scroll(function () {
                if ($(window).scrollTop() > offset.top) {
                    $("#divFilters").stop().animate({
                        marginTop: $(window).scrollTop() - offset.top + topPadding
                    });
                } else {
                    $("#divFilters").stop().animate({
                        marginTop: 0
                    });
                };
            });
        });
    </script>
}