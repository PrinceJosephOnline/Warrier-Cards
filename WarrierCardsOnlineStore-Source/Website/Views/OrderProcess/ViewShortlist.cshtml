@{
    @model List<WarrierCards.Website.CatalogueService.SelectedCardInfo>
    ViewBag.Title = "Shortlist";
}

<h2>Your Shortlisted Cards</h2>

<div class="content-wrapper">
    <div class="float-left large-pane">
        @if (Model == null || Model.Count == 0)
        {
            <div style="min-height: 250px;">
                <h4>No cards shortlisted.</h4>
            </div>
        }
        <form method="post" action="@Url.Action("view-shortlist", "my")">
            @foreach (var card in Model)
            {
                <article data-id="@card.Card.CardId" class="boxed cartBox">
                    <div class="float-left">
                        <img src="@card.Card.CardMainImagePath" class="imageMedium" />
                    </div>
                    <div class="float-left normal-text">
                        <a href="~/card-details/@card.Card.CardId" class="mainLink">@card.Card.CardName</a>
                        <p>Code: @card.Card.CardModelNumber</p>
                        Price: 
                    @if (@card.Card.CardOrginalPrice != card.Card.CardSellingPrice)
                    {
                        <span class="strikedRed">&#8377;@card.Card.CardOrginalPrice</span>
                    }
                        &#8377;@card.Card.CardSellingPrice
                        <br />
                        Quantity:
                        <input type="text" data-type="quantity" value="@card.Quantity" class="smaller" />
                    </div>

                    <div class="float-right">
                        <input type="submit" value="Remove" class="warrier-button small" onclick="OnRemoveFromShortlist(this);" />
                        <br />
                        <input type="submit" value="Move to Cart" class="warrier-button small" onclick="MoveToCart(this);" />
                    </div>
                    <br class="clear" />
                </article>
            }
        </form>
    </div>

    <div class="float-left small-pane">
        @if (Model != null && Model.Count > 0)
        {
            <div class="boxed">
                <h2>Similar Cards</h2>
                <div class="wrapper">
                    <span class="semibold-text"></span>
                </div>
            </div>
        }
        else
        {
            <div class="boxed">
                <h2>How/Why to create Shortlists?</h2>
                <div class="wrapper normal-text">
                    You can create 'Shortlist' by clicking the 'Shortlist' buttons or links
                    displayed along with a card listing.

                    <p>We have a wide range cards, the 'Shortlist' help you to quickly bookmark cards
                    while your going through our catalogue. Later, you can check and compare all the 
                    shortlisted cards and delete unwanted cards or move required cards to your cart. </p>
                </div>
            </div>
        }

        <div class="boxed marginTop">
            <h2>How to buy?</h2>
            <div class="wrapper normal-text">
                Purchase your card in few easy steps.
                <ol>
                    <li>Login / Register</li>
                    <li>Add your card to Cart</li>
                    <li>Customize your card for printing</li>
                    <li>Provide Shipping Address</li>
                    <li>Review Order</li>
                    <li>Make Payment & Place your order</li>
                </ol>
            </div>
        </div>

        <div class="boxed marginTop">
            <h2>Customization/Proofing/Delivery</h2>
            <div class="wrapper normal-text">
                We provide you various options to customize contents to be printed your card. 
                Customization includes anything and everything that gets printed on cards and envelops.
                <ul>
                    <li>If you choose to customize yourself online, our executives will get back to you in 48 hours with proof.
                        Once the proof is approved, the order shall be delivered in 7 - 10 business days in India.
                    </li>
                    <li>If you need assistance in custmizing the order, you can request a callback while placing the order.
                        Our executives will get in touch with you in 24 hours. Once the customization and proofing is completed,
                        the order shall be delivered in 7 - 10 business days in India.
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>
